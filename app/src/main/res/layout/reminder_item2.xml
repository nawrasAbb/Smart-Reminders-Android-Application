<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#8A8986"
    app:cardCornerRadius="4dp"
    tools:context=".alarm_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:background="#2E2D2D">


        <TextView
            android:id="@+id/ReminderTitle"
            android:layout_width="297dp"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="59dp"
            android:autoText="false"
            android:background="#2E2D2D"
            android:clickable="false"
            android:cursorVisible="false"
            android:elegantTextHeight="true"
            android:fadeScrollbars="false"
            android:focusableInTouchMode="false"
            android:isScrollContainer="false"
            android:linksClickable="true"
            android:textColor="#9C9898"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.134" />

        <!--            app:srcCompat="@drawable/ic_baseline_auto_delete_24" />-->

        <ImageButton
            android:id="@+id/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="368dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="55dp"
            android:backgroundTint="#2E2D2D"
            android:tint="#9C9898"
            app:srcCompat="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/location_RV"
            android:layout_width="334dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="35dp"
            android:background="#2E2D2D"
            android:textColor="#9C9898" />

        <TextView
            android:id="@+id/time_RV"
            android:layout_width="334dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="18dp"
            android:background="#2E2D2D"
            android:textColor="#9C9898" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>





